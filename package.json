{
    "name": "trading-bot",
    "version": "1.0.0",
    "description": "Automated Trading Bot with Angel SmartAPI",
    "main": "src/app.js",
    "scripts": {
        "start": "node dist/app.js",
        "start:ts": "ts-node src/app.ts",
        "start:prod": "npm run build && npm start",
        "dev": "nodemon --exec ts-node src/app.ts",
        "build": "npm run clean && tsc",
        "clean": "rm -rf dist",
        "backtest": "ts-node src/scripts/runBacktest.ts",
        "paper": "ts-node src/scripts/runPaperTrading.ts"
    },
    "dependencies": {
        "axios": "^1.5.0",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "node-cron": "^3.0.2",
        "node-telegram-bot-api": "^0.61.0",
        "speakeasy": "^2.0.0",
        "uuid": "^9.0.1",
        "winston": "^3.10.0",
        "ws": "^8.14.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/node": "^24.3.0",
        "@types/node-telegram-bot-api": "^0.64.10",
        "@types/speakeasy": "^2.0.10",
        "@types/ws": "^8.18.1",
        "nodemon": "^3.1.10",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2"
    }
}
